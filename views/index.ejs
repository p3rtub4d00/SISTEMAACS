<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Painel ACS Digital</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .card-paciente { transition: transform 0.2s; border-left: 5px solid #0d6efd; }
        .card-paciente:hover { transform: translateY(-5px); box-shadow: 0 5px 15px rgba(0,0,0,0.1); }
        .badge-microarea { font-size: 0.9em; background-color: #e9ecef; color: #333; padding: 5px 10px; border-radius: 10px; }
        .tag-alerta { font-size: 0.7em; margin-right: 2px; }
    </style>
</head>
<body class="bg-light">
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary mb-4 shadow-sm">
        <div class="container">
            <a class="navbar-brand fw-bold" href="/">üè• ACS Digital</a>
            <div class="d-flex">
                <a href="/cadastro" class="btn btn-light text-primary fw-bold shadow-sm">+ NOVO CADASTRO</a>
            </div>
        </div>
    </nav>

    <div class="container">
        <div class="row justify-content-center mb-4">
            <div class="col-md-8">
                <form action="/" method="GET" class="d-flex shadow-sm rounded">
                    <input type="text" name="search" class="form-control border-0 p-3 rounded-start" placeholder="üîç Buscar por nome, CPF ou micro√°rea..." style="font-size: 1.1em;">
                    <button class="btn btn-primary px-4 rounded-end fw-bold" type="submit">BUSCAR</button>
                </form>
            </div>
        </div>

        <h4 class="mb-3 text-secondary border-bottom pb-2">üìÇ Meus Cadastros</h4>

        <div class="row">
            <% if(pacientes && pacientes.length > 0) { %>
                <% pacientes.forEach(function(paciente) { %>
                    <div class="col-md-6 col-lg-4 mb-4">
                        <div class="card card-paciente h-100 shadow-sm">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-start mb-2">
                                    <span class="badge-microarea">MA: <%= paciente.microarea %></span>
                                    <small class="text-muted">Fam: <%= paciente.familiaId || '-' %></small>
                                </div>
                                
                                <h5 class="card-title fw-bold text-primary mb-1 text-truncate"><%= paciente.nome %></h5>
                                <p class="card-text text-muted small mb-2">
                                    CNS: <%= paciente.cns || '...' %>
                                </p>

                                <div class="mb-3">
                                    <% if(paciente.gestante) { %> <span class="badge bg-danger tag-alerta">Gestante</span> <% } %>
                                    <% if(paciente.hipertenso) { %> <span class="badge bg-warning text-dark tag-alerta">Hipertenso</span> <% } %>
                                    <% if(paciente.diabetico) { %> <span class="badge bg-warning text-dark tag-alerta">Diab√©tico</span> <% } %>
                                    <% if(paciente.acamado) { %> <span class="badge bg-dark tag-alerta">Acamado</span> <% } %>
                                    <% if(paciente.beneficiarioBolsaFamilia) { %> <span class="badge bg-success tag-alerta">Bolsa Fam√≠lia</span> <% } %>
                                </div>

                                <a href="/paciente/<%= paciente.id %>" class="btn btn-outline-primary w-100 btn-sm fw-bold">Ver Ficha / Editar</a>
                            </div>
                        </div>
                    </div>
                <% }); %>
            <% } else { %>
                <div class="col-12 text-center mt-5">
                    <h3 class="text-muted">Nenhum paciente encontrado.</h3>
                    <a href="/cadastro" class="btn btn-lg btn-success mt-3">Cadastrar o Primeiro</a>
                </div>
            <% } %>
        </div>
    </div>
</body>
</html>
